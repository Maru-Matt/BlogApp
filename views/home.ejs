<%- include('../partials/header') %>


<div class="header">
 
</div>

<div class="post">
    <h1 class="title">Blog Title</h1>
    <p class="post-text"><%= home_content %></p>
    
</div>
<section class="recent-posts">
    <div class="post-item">
        <h1 class="subtitle">Title</h1>
        <p class="post-text"><%= home_content %></p>
    </div>
    <div class="post-img">
        <img src="/images/blog/gym.jpg" alt="">
    </div>

</section>
<section class="recent-posts1">
    <div class="post-img">
        <img src="/images/blog/food.jpg" alt="">
    </div>
    <div class="post-item">
        <h1 class="subtitle">Title</h1>
        <p class="post-text"><%= home_content %></p>
    </div>
   

</section>
<section class="recent-posts2">
    <div class="post-item">
        <h1 class="subtitle">Title</h1>
        <p class="post-text"><%= home_content %></p>
    </div>
    <div class="post-img">
        <img src="/images/blog/gym2.jpg" alt="">
    </div>

</section>
<div class="older-posts">
    <h1 class="subtitle">Older Posts</h1>
    <% for (let i = 0; i < new_post.length; i++) { %>
        <a class="subtitle space" href="/posts/<%= new_post[i]['title'] %>"><%= new_post[i]['title'] %></a>
        <% if (new_post[i].length <= 100) { %>
            <p class="post-text"><%= new_post[i]['body'] %></p>
        <% } else { %>
            <p class="post-text"><%= new_post[i]['body'].slice(0, 200) + "..."  %> <a href=" /posts/<%= new_post[i]['title'] %> ">Read More</a></p>
        <% } %>
    <% } %>

</div>
</div>
<div class="footer1">
   <div class="links">
    <a href=""><i class="fa-brands fa-facebook"></i></a>
    <i class="fa-brands fa-instagram"></i>
    <i class="fa-brands fa-twitter"></i>
   </div>
   <div>
    <p class="post-text">Made my <span> Matt_Maru</span>.</p>
   </div>
   
</div>


